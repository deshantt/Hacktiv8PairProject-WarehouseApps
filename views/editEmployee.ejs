<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/bootstrap") %>
    <title>Edit Employee</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <br><h2>Edit Employee</h2><br>

    <form action="/employees/<%= employee.id %>/edit" method="post">
        <div>
            <div class="col-md-3 mb-3">
                <label for="firstName" class="validationServer01">First Name</label>
                <input type="text" class="form-control" name="firstName" placeholder="e.g: Dika" value="<%= employee.firstName %>" required>
            </div>
        </div>

        <div>
            <div class="col-md-3 mb-3">
                <label for="lastName" class="validationServer01">Last Name</label>
                <input type="text" class="form-control" name="lastName" placeholder="e.g: Sunandar" value="<%= employee.lastName %>" required>
            </div>
        </div>

        <div>
            <div class="col-md-3 mb-3">
                <label for="salary" class="validationServer01">Salary</label>
                <input type="number" class="form-control" name="salary" placeholder="e.g: 10000000" value="<%= employee.salary %>" required>
            </div>
        </div>

        <div>
            <div class="col-md-3 mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Warehouse</legend>
                    <select name="WarehouseId" class="custom-select custom-select-md mb-3">
                        <option selected disabled>---SELECT---</option>
                        <div class="col-md-3 mb-3">
                            <% for (let i = 0; i < result.length; i++) {%>
                              <option value="<%=result[i].dataValues.id%>"<%= employee.Warehouse.id === result[i].dataValues.id ? 'selected' : '' %>><%=result[i].getWarehouseName()%></option>
                            <%}%>
                        </div>
                    </select>
            </div>
        </div>

        <div>
            <div class="col-md-3 mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Position</legend>
                    <select name="position" class="custom-select custom-select-md mb-3">
                        <option selected disabled>---SELECT---</option>
                        <option <%= employee.position === "boss" ? "selected" : "" %> value="boss">Big Boss</option>
                        <option <%= employee.position === "administrator" ? "selected" : "" %> value="administrator">Administrator</option>
                        <option <%= employee.position === "staff" ? "selected" : "" %> value="staff">Staff</option>
                        <option <%= employee.position === "officeBoy" ? "selected" : "" %>value="officeBoy">Office Boy</option>
                    </select>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
            <div class="col-sm-10">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" value="male"
                        <%= employee.gender === "male" ? "checked" : "" %>>
                    <label class="form-check-label" for="genderMale">
                        Male
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" value="female"
                        <%= employee.gender === "female" ? "checked" : "" %>>
                    <label class="form-check-label" for="genderFemale">
                        Female
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-danger" href="/employees/" role="button">Cancel</a>
            </div>
        </div>
    </form>

    <%- include("./partials/validation") %>
    <%- include("./partials/footer") %>
</body>

</html>