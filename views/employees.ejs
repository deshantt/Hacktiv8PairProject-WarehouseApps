<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/bootstrap") %>
    <title>Employee List</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <h2>Employee List</h2>

    <a class="btn btn-primary" href="/Employee/add" role="button">Add Employee</a>
    <br>
    <br>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Position</th>
                <th scope="col">Gender</th>
                <th scope="col">Salary</th>
                <th scope="col">Warehouse</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            <% employees.forEach(employee => { %>
            <tr>
                <td><%= employee.firstName %></td>
                <td><%= employee.lastName %></td>
                <td><%= employee.position %></td>
                <td><%= employee.salary %></td>
                <td><%= employee.gender %></td>
                <td><%= employee.WarehouseId %></td>
                <td><a class="btn btn-primary" href="/warehouses/<%= warehouse.id %>/edit" role="button">Edit</a> <a
                        class="btn btn-danger" href="/warehouses/<%= warehouse.id %>/delete"
                        onclick="return confirm('Are you sure you want to delete the item?')" role="button">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <%- include("./partials/footer") %>
</body>

</html>