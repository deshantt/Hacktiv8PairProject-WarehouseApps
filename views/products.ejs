<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/bootstrap") %>
    <title>Product List</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <h2>Warehouse List</h2>

    <a class="btn btn-primary" href="/products/add" role="button">Add Product</a>
    <br>
    <br>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Expiry Date</th>
                <th scope="col">Price</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
            <tr>
                <td><%= product.name %></td>
                <td><%= product.category %></td>
                <td><%= product.expiryDate %></td>
                <td><a class="btn btn-primary" href="/products/<%= product.id %>/edit" role="button">Edit</a> <a
                        class="btn btn-danger" href="/products/<%= product.id %>/delete"
                        onclick="return confirm('Are you sure you want to delete the item?')" role="button">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <%- include("./partials/footer") %>
</body>

</html>