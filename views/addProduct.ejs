<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/bootstrap") %>
    <title>Add Product</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <br><h2>Add Product</h2><br>

    <form action="/products/add" method="post">
        <div>
            <div class="col-md-3 mb-3">
                <label for="name" class="validationServer01">Product Name</label>
                <input type="text" class="form-control" name="name" placeholder="e.g: Shampoo Clear" required>
            </div>
        </div>

        <div>
            <div class="col-md-3 mb-3">
                <label for="price" class="validationServer01">Price</label>
                <input type="number" class="form-control" name="price" placeholder="e.g: 20000" required>
            </div>
        </div>

        <div>
            <div class="col-md-3 mb-3">
                <label for="expiryDate" class="validationServer01">Expiry Date</label>
                <input type="date" class="form-control" name="expiryDate" required>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <legend class="col-form-label">Category</legend>
                <div class="form-check">
                    <select name="category" class="custom-select custom-select-md mb-3">
                        <option selected disabled>Choose...</option>
                        <option value="ladiesWear">Ladies Wear</option>
                        <option value="shoes">Shoes</option>
                        <option value="accesories">Accessories</option>
                        <option value="jacket">Jacket</option>
                    </select>
                </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-danger" href="/products/" role="button">Cancel</a>
            </div>
        </div>
    </form>

    <%- include("./partials/validation") %>
    <%- include("./partials/footer") %>
</body>

</html>