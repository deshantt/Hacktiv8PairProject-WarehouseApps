<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/bootstrap") %>
    <title>Add Product</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <h2>Add Product</h2>

    <form action="/products/add" method="post">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Product Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="name" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="price" class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="price" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="expiryDate" class="col-sm-2 col-form-label">Expiry Date</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" name="expiryDate" required>
            </div>
        </div>
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Category</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <select name="category" class="custom-select custom-select-md mb-3">
                        <option value="ladiesWear">Ladies Wear</option>
                        <option value="shoes">Shoes</option>
                        <option value="accesories">Accessories</option>
                        <option value="jacket">Jacket</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-danger" href="/products/" role="button">Cancel</a>
            </div>
        </div>
    </form>

    <%- include("./partials/validation") %>
    <%- include("./partials/footer") %>
</body>

</html>