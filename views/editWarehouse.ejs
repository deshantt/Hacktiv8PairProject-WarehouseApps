<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/bootstrap") %>
    <title>Edit Warehouse</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <h2>Edit Warehouse</h2>

    <form action="/warehouses/<%= warehouse.id %>/edit" method="POST">
        <div class="form-group row">
            <label for="city" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="city" value=<%= warehouse.city %> required>
            </div>
        </div>
        <div class="form-group row">
            <label for="address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="address" value=<%= warehouse.address %>>
            </div>
        </div>
        <div class="form-group row">
            <label for="leaseExpiryDate" class="col-sm-2 col-form-label">Lease Expiry Date</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" name="leaseExpiryDate" value=<%= warehouse.leaseExpiryDate %>>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-danger" href="/warehouses/" role="button">Cancel</a>
            </div>
        </div>
    </form>

    <%- include("./partials/validation") %>
    <%- include("./partials/footer") %>
</body>

</html>