<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/bootstrap") %>
    <title>Edit Warehouse</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <h2>Edit Warehouse</h2>

    <form action="/warehouses/<%= warehouse.id %>/edit" method="POST">
        <div>
            <div class="col-md-3 mb-3">
                <label for="city" class="validationServer01">City</label>
                <input type="text" class="form-control" name="city" placeholder="e.g: Bandung" value="<%= warehouse.city %>" required>
            </div>
        </div>

        <div>
            <div class="col-md-3 mb-3">
                <label for="address" class="validationServer01">Address</label>
                <input type="text" class="form-control" name="address" placeholder="e.g: Jln. Sunan Giri No.12, Waru, Kebon Kacang"  value="<%= warehouse.address %>" required>
            </div>
        </div>

        <div>
            <div class="col-md-3 mb-3">
                <label for="leaseExpiryDate" class="validationServer01">Lease Expiry Date</label>
                <input type="date" class="form-control" name="leaseExpiryDate" placeholder="e.g: Shampoo Clear" value="<%= warehouse.leaseExpiryDate %>" required>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-danger" href="/warehouses/" role="button">Cancel</a>
            </div>
        </div>
    </form>

    <%- include("./partials/validation") %>
    <%- include("./partials/footer") %>
</body>

</html>